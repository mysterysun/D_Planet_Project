<!--Video Info, title,description,type,comment//-->
<p>
  <b>Title:</b>
  <%= @video.title %>
</p>

<p>
  <b>Description:</b>
  <%= @video.description %>
</p>
<p>
  <b>Type:</b>
  <%= @video.kind %>
</p>
<p>
 <b>Comment:</b>
 <br>
 <% @video.comment.split(/\n/).each do |comment| %>
 <%=comment%>
 <br></br>
 <%end%>
</p>

<!--Make Comment-->
<%=form_tag videos_path, :method => 'get' do %>
    <p>
      <%= text_area_tag :comment, params[:comment],:cols => "70", :rows => "5" %>
      <%= hidden_field_tag 'id', @video.id %>
      <%= submit_tag "Comment", :name => nil %>
    </p>
<% end %>


<!--show edit only to auth-->
<%if session[:userName]=="SJF"%>
    <%= link_to 'Edit', edit_video_path(@video) %> |
    <%= link_to 'Back', videos_path %>
<%end%>

<!--function only for commentary video-->
<%if @video.kind=="comment"%>
    <%if @video.id<10%>
        <%temp_id="00"+@video.id.to_s+"/"%>
    <%elsif @video.id<100%>
        <%temp_id="0"+@video.id.to_s+"/"%>
    <%end%>
    <%files = Dir.glob(Rails.root.to_s+"/public/000/000/"+temp_id+'/*.mp3')%>
    <%sjf=Array.new%>
    <% files.each do|file|%>
     <%sjf<<(file[Rails.root.to_s.length+16+temp_id.length+1,file.length])  %>
    <%end%>

    <!--upload function only for commentary video-->
    <%if session[:userName]=="SJF"%>


        <%= form_for(@video) do |f| %>
            <%= f.file_field:avatar  %>
        <div class="actions">
            <%= f.submit "Upload Commentary" %>
        </div>
        <% end %>
     <%end%>





        <%=form_tag videos_path, :method => 'get' do %>
            <p>
            <%= select_tag :comment_version,options_for_select(sjf), :onchange => "this.form.submit();" , :prompt=>"Version"%>
            <%= hidden_field_tag 'id', @video.id %>
            </p>
        <% end %>
        <%if @video.id<10%>
            <%temp_id="00"+@video.id.to_s+"/"%>
        <%elsif @video.id<100%>
            <%temp_id="0"+@video.id.to_s+"/"%>
        <%end%>
